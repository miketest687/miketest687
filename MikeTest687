<script>
   var dna_points = 200;
   var plus_cure = setInterval(add_cure, 3000);
   var plus_DNA = setInterval(add_DNA, 18000)
   var cure = document.getElementById("amount");
   var win_counter = 0;
   var counter = 1;
   var p_counter = 1;
   var health1 = 300;
   var health2 = 300;
   var health3 = 300;
   var health4 = 300;
   var health5 = 300;
   var health6 = 300;
   var health7 = 300;
   function add_cure() {
       if (p_counter === 101) {
           clearInterval(plus_cure);
           document.getElementById("lose_screen").style.display = "block";
       }
       if (counter % 3 === 0) {
           cure.innerText = p_counter + "%";
           p_counter += 1;
       }
       cure.style.width = counter + "px";
       counter += 1;
   }
   function infect(target) {
       var system = document.getElementById(target);
       if (dna_points == 50) {
           for (var x = 0; x < 7; x++) {
               document.getElementsByClassName("virus")[x].disabled = true;
           }
       }
       switch (target) {
           case "d_color":
               if (system.style.width == 0 + "px") {
                   document.getElementsByClassName("virus")[0].disabled = true;
                   win_counter += 1;
               }
               health1 -= 20;
               system.style.width = health1 + "px";
               system.innerText = (100 - (300 - health1) / 3).toFixed(2) + "%";
               break;
           case "r_color":
               if (system.style.width == 0 + "px") {
                   document.getElementsByClassName("virus")[1].disabled = true;
                   win_counter += 1;
               }
               health2 -= 20;
               system.style.width = health2 + "px";
               system.innerText = (100 - (300 - health2) / 3).toFixed(2) + "%";
               break;
           case "c_color":
               if (system.style.width == 0 + "px") {
                   document.getElementsByClassName("virus")[2].disabled = true;
                   win_counter += 1;
               }
               health3 -= 20;
               system.style.width = health3 + "px";
               system.innerText = (100 - (300 - health3) / 3).toFixed(2) + "%";
               break;
           case "n_color":
               if (system.style.width == 0 + "px") {
                   document.getElementsByClassName("virus")[3].disabled = true;
                   win_counter += 1;
               }
               health4 -= 20;
               system.style.width = health4 + "px";
               system.innerText = (100 - (300 - health4) / 3).toFixed(2) + "%";
               break;
           case "m_color":
               if (system.style.width == 0 + "px") {
                   document.getElementsByClassName("virus")[4].disabled = true;
                   win_counter += 1;
               }
               health5 -= 20;
               system.style.width = health5 + "px";
               system.innerText = (100 - (300 - health5) / 3).toFixed(2) + "%";
               break;
           case "re_color":
               if (system.style.width == 0 + "px") {
                   document.getElementsByClassName("virus")[5].disabled = true;
                   win_counter += 1;
               }
               health6 -= 20;
               system.style.width = health6 + "px";
               system.innerText = (100 - (300 - health6) / 3).toFixed(2) + "%";
               break;
           case "s_color":
               if (system.style.width == 0 + "px") {
                   document.getElementsByClassName("virus")[6].disabled = true;
                   win_counter += 1;
               }
               health7 -= 20;
               system.style.width = health7 + "px";
               system.innerText = (100 - (300 - health7) / 3).toFixed(2) + "%";
               break;
       }
       dna_points -= 50;
       document.getElementById("dna_points").innerText = "DNA Points: " + dna_points;
       if (win_counter == 7) {
           setTimeout(() => {
               document.getElementById("win_screen").style.display = "block";
           }, 500);
       }
   }
   function add_DNA() {
       var which = Math.floor(Math.random() * 7);
       document.getElementsByClassName("DNA")[which].disabled = false;
       document.getElementsByClassName("DNA")[which].onclick = function () {
           dna_points += 50;
           document.getElementById("dna_points").innerText = "DNA Points: " + dna_points;
           for (var i = 0; i < 7; i++) {
               if (document.getElementsByClassName("color")[i].style.width !== "0px")
                   document.getElementsByClassName("virus")[i].disabled = false;
           }
           which = Math.floor(Math.random() * 7)
           document.getElementsByClassName("DNA")[which].disabled = true;
       }
   }
</script>

